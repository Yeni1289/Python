import time

def cuenta_regresiva(segundos):
    while segundos:
        mins, secs = divmod(segundos, 60)
        timer = f"{mins:02d}:{secs:02d}"
        print(timer, end="\r")
        time.sleep(1)
        segundos -= 1
    print("Â¡Tiempo terminado!")

# Ejemplo de uso
if __name__ == "__main__":
    cuenta_regresiva(10)
