import random
import time
import datetime
import os
import platform

def generar_arte_ascii():
    simbolos = ['@', '#', '$', '%', '&', '*', '+', '-', '=', '~']
    arte = ''
    for _ in range(10):
        linea = ''.join(random.choice(simbolos) for _ in range(30))
        arte += linea + '\n'
    return arte

def decir_la_hora_con_estilo():
    ahora = datetime.datetime.now()
    return f"La hora mÃ­stica actual es: {ahora.strftime('%Y-%m-%d ğŸ•’ %H:%M:%S')}"

def emitir_sonido():
    sistema = platform.system()
    if sistema == "Windows":
        import winsound
        winsound.Beep(1000, 500)
    elif sistema == "Darwin":
        os.system('say "Boom"')
    else:
        print('\a')  # Pitido ASCII en consola (a veces funciona)

def calculo_totalmente_inutil():
    resultado = 0
    for i in range(1, 999):
        resultado += (i ** 0.5) * random.randint(1, 3)
    return round(resultado, 4)

